<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDebt"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/body3">
        <ImageButton
            android:id="@+id/addStatistic_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow_left"
            android:contentDescription="@string/app_name"
            android:background="@color/background"/>
        <TextView
            android:id="@+id/addStatistic_textHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm báo cáo thống kê"
            android:textSize="@dimen/heading2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body1">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStatistic_idStatistic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:paddingVertical="@dimen/heading3"
                android:hint="Mã báo cáo thống kê"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/black"
                android:inputType="text"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStatistic_revenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:paddingVertical="@dimen/heading3"
                android:hint="Doanh thu"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/black"
                android:inputType="number"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStatistic_expense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:paddingVertical="@dimen/heading3"
                android:hint="Chi phí"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/black"
                android:inputType="number"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addStatistic_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:paddingVertical="@dimen/heading3"
                android:hint="Thuế"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/black"
                android:inputType="number"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/addStatistic_saveData"
            android:layout_marginTop="@dimen/body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textSize="@dimen/body1"
            android:paddingVertical="@dimen/body1"
            android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>
</LinearLayout>